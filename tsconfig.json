{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    // temp fix to let the nlp 'compromise' library compile
    "strictPropertyInitialization": false
  }
}
