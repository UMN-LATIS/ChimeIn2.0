{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    // disabling: nlp-compromise doesn't like this setting
    // "esModuleInterop": true
    "outDir": "./public/build"
  },
  "include": ["resources"],
  "exclude": ["vendor", "node_modules", "./public/build"]
}
